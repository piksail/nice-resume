{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    // "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "ES2021.String",
      "ESNext.AsyncIterable",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/typescript-build",
      "@types/node",
      "vitest/globals"
    ]
  },
  "exclude": ["node_modules", "nuxt.*.ts"],
  "extends": "./.nuxt/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
